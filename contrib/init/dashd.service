[Unit]
Description=Eziocoin's distributed currency daemon
After=network.target

[Service]
User=eziocoincore
Group=eziocoincore

Type=forking
PIDFile=/var/lib/eziocoind/eziocoind.pid
ExecStart=/usr/bin/eziocoind -daemon -pid=/var/lib/eziocoind/eziocoind.pid \
-conf=/etc/eziocoincore/eziocoin.conf -datadir=/var/lib/eziocoind -disablewallet

Restart=always
PrivateTmp=true
TimeoutStopSec=60s
TimeoutStartSec=2s
StartLimitInterval=120s
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
